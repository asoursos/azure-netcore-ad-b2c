@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@section jumbotron
{
    <div class="jumbotron">
        <div class="container">
            <h1><span class="text-danger">@User.Identity.Name</span> claims that:</h1>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Claim</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var claim in User.Claims)
            {
                <tr>
                    <td>@claim.Type</td>
                    <td>@(claim.Value?.Length > 50 ? claim.Value.Substring(50) + "..." : claim.Value)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
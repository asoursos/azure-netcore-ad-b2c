@model EasyTrade.App.Controllers.TradeController.TradingVm

@{
    ViewBag.Title = "Trading";
    Layout = "_Layout";
}

@section jumbotron
{
    <div class="jumbotron">
        <div class="container">
            <h1>Trade like you never before!</h1>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Our analysts are ready to accept your call!</h3>
            </div>
            <div class="panel-body">
                Call us <a href="#">210-2323232</a>.
            </div>
        </div>
        
        
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">News</h3>
            </div>
            <div class="panel-body">
                <div class="list-group">
                        
                    @for (var i = 65; i < 78; i += 2)
                    {
                        var a = string.Join("", Enumerable.Range(1, 3).Select(x => (char)(i + x)));
                        var b = string.Join("", Enumerable.Range(1, 3).Select(x => (char)(i + 3 + x)));

                        <a href="#" class="list-group-item">
                            <h4 class="list-group-item-heading">@DateTime.Now.AddDays(59 - i).ToString("D")</h4>
                            <p class="list-group-item-text">@a buys @b for a fistful of dollars.</p>
                        </a>
                    }
                </div>
            </div>
        </div>
        
    </div>
    <div class="col-md-6">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">Your recent history</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <td>Date</td><td>Action</td><td>Description</td><td class="text-right">Amount</td>
                    </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < 14; i++)
                        {
                            <tr>
                                <td>@DateTime.Now.AddDays(-i).ToString("D")</td>
                                <td>@(i % 3 == 0 ? "Buy" : "Sell")</td>
                                <td>@(i % 3 == 0 ? "Blue Chips" : "Stratton Oakmont")</td>
                                <td class="text-right">@(((i + 1) * new Random().Next(1,100) * 3000).ToString("##,###"))&euro;</td>
                            </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
